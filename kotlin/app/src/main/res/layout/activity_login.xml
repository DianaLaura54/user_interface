<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Login Fields -->
        <EditText
            android:id="@+id/usernameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="12dp" />

        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:layout_marginTop="16dp" />

        <!-- ProgressBar for loading -->
        <ProgressBar
            android:id="@+id/loadingProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:indeterminate="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp" />

        <!-- Category Images Layout (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/categoryImagesLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Category 1: Men's Clothing -->
            <ImageView
                android:id="@+id/menCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/mens_clothing"
                android:contentDescription="Men's Clothing" />

            <Button
                android:id="@+id/filterMensClothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Men's Clothing"
                android:layout_marginTop="8dp" />

            <!-- Category 2: Women's Clothing -->
            <ImageView
                android:id="@+id/womenCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/womens_clothing"
                android:contentDescription="Women's Clothing" />

            <Button
                android:id="@+id/filterWomensClothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Women's Clothing"
                android:layout_marginTop="8dp" />

            <!-- Category 3: Electronics -->
            <ImageView
                android:id="@+id/electronicsCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/electronics"
                android:contentDescription="Electronics" />

            <Button
                android:id="@+id/filterElectronics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Electronics"
                android:layout_marginTop="8dp" />

            <!-- Category 4: Jewelry -->
            <ImageView
                android:id="@+id/jewelryCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/jewelry"
                android:contentDescription="Jewelry" />

            <Button
                android:id="@+id/filterJewelry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Filter Jewelry"
                android:layout_marginTop="8dp" />

            <!-- Logout Button -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:layout_marginTop="16dp"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Product ID Search -->
        <EditText
            android:id="@+id/productIdInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Product ID (1-20)"
            android:inputType="number"
            android:padding="8dp"
            android:layout_marginBottom="8dp" />

        <!-- Product Validation Message -->
        <TextView
            android:id="@+id/productValidationMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="gone"
            android:layout_marginBottom="8dp" />

        <!-- Product Details -->
        <TextView
            android:id="@+id/productDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="16sp" />

        <!-- Product List -->
        <ListView
            android:id="@+id/productListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
